<% up = rand(1..25); down = rand(1..15); total = up + down; %>
<li class="span3">
  <% if(@current_user.has_therapy_saved(therapy.id)) %>
    <a class="" href="<%= delete_saved_therapies_path(therapy.id) %>" style="position: absolute;"><i class="icon-star-empty icon-large"></i></a>
  <% else %>
      <a class="" href="<%= create_saved_therapies_path(therapy.id) %>" style="position: absolute;"><i class="icon-star icon-large"></i></a>
  <% end %>
  <div class="thumbnail">
    <input class="knob" data-width="150" data-height="150" data-fgColor="chartreuse" data-thickness=".4" data-max="<%= total %>" data-readOnly=true data-value="<%= up %>" value="<%= total %>">
    <div class="caption">
      <h3 style="height: 40px; overflow: hidden;"><%= therapy.name %></h3>
      <p style="height: 100px; overflow: hidden;"><%= truncate(therapy.description, :length => 100) %></p>
      <p><a href="<%= therapy_path(therapy.id) %>" class="btn btn-small btn-primary" onclick="getDialog(this, {  }); return false;">Meer informatie</a> <a href="#" class="btn btn-small">Waardering</a></p>
    </div>
  </div>
</li>