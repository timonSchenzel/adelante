<!DOCTYPE html>
<html>
<head>
    <title><%= full_title(yield(:title)) %></title>
    <%= stylesheet_link_tag    "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= render 'layouts/shim' %>
</head>
<body>
    <% if(@render_header == true || @render_header.nil?) %>
        <%= render 'layouts/header' %>
    <% end %>
    <div class="container">
      <% flash.each do |key, value| %>
          <div  class="alert alert-<%= key %>"><%= value %><a class="close" data-dismiss="alert" href="#">&times;</a></div>
      <% end %>

      <% if(signed_in?) %>
          <%= render 'layouts/masterpage_login' %>
      <% else %>
          <%= yield %>
      <% end %>


      <% if(@render_footer == true || @render_footer.nil?) %>
        <%= render 'layouts/footer' %>
      <% end %>
    </div>

    <%= debug(params) if Rails.env.development? %>

</body>
</html>